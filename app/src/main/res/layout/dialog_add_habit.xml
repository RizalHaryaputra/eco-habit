<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Kebiasaan"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh: Matikan AC"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spDialogCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan Pengingat"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/cbDialogAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perlu Tindakan (Tombol Selesai)"
        android:checked="true"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/cbDialogRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waktu Acak (Antara 08:00 - 20:00)"
        android:textSize="14sp"/>

    <CheckBox
        android:id="@+id/cbDialogRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ulangi Setiap Hari"
        android:textSize="14sp"
        android:checked="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Pelaksanaan"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/layoutTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:text="Pilih Jam (08:00)"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>