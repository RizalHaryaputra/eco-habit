<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHabitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bawa Botol Minum"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvHabitCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Sampah"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/tvHabitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 Nov, 08:00"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Done Button (Hidden by default, appears when time is up) -->
        <Button
            android:id="@+id/btnDoneAction"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Selesai"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Hapus" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>
</androidx.cardview.widget.CardView>